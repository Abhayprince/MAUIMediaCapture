<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIMediaCapture.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <Grid
        Padding="15"
        RowDefinitions="Auto, Auto"
        RowSpacing="10">
        <Border
            BackgroundColor="LightGray"
            HeightRequest="250"
            HorizontalOptions="Center"
            WidthRequest="250">
            <Image
                x:Name="Img"
                Aspect="AspectFit"
                HeightRequest="250"
                WidthRequest="250" />
        </Border>
        <Grid Grid.Row="1" ColumnDefinitions="Auto, *, Auto">
            <Button
                x:Name="CapturePhotoBtn"
                Grid.Column="0"
                Clicked="CapturePhotoBtn_Clicked"
                HorizontalOptions="Center"
                Text="Capture Photo" />
            <Button
                x:Name="PickPhotoBtn"
                Grid.Column="2"
                Clicked="PickPhotoBtn_Clicked"
                HorizontalOptions="Center"
                Text="Pick Photo" />
        </Grid>
    </Grid>


</ContentPage>
