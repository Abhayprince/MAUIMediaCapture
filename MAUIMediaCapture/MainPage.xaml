<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIMediaCapture.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <Grid RowDefinitions="Auto, Auto" RowSpacing="10">
        <Border
            BackgroundColor="LightGray"
            HeightRequest="250"
            HorizontalOptions="Center"
            WidthRequest="250">
            <Image
                x:Name="Img"
                Aspect="AspectFit"
                HeightRequest="250"
                WidthRequest="250" />
        </Border>
        <Button
            x:Name="CapturePhotoBtn"
            Grid.Row="1"
            Clicked="CapturePhotoBtn_Clicked"
            HorizontalOptions="Center"
            Text="Capture Photo" />
    </Grid>


</ContentPage>
